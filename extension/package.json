{
    "private": true,
    "name": "@metheus/extension",
    "version": "0.1.0",
    "type": "module",
    "scripts": {
        "dev": "wxt",
        "dev:firefox": "wxt -b firefox",
        "dev:firefox-android": "wxt -b firefox-android --mv2",
        "build": "wxt build",
        "build:firefox": "wxt build -b firefox",
        "build:firefox-android": "wxt build -b firefox-android --mv2",
        "zip": "yarn check && wxt zip",
        "zip:firefox": "yarn check && wxt zip -b firefox",
        "zip:firefox-android": "yarn check && wxt zip -b firefox-android --mv2 --sources",
        "compile": "tsc --noEmit",
        "postinstall": "wxt prepare",
        "check": "yarn workspace metheus-extension run verify && yarn compile",
        "test": "jest"
    },
    "dependencies": {
        "@emotion/react": "^11.14.0",
        "@emotion/styled": "^11.14.1",
        "@metheus/common": "workspace:^",
        "@mui/icons-material": "^6.4.8",
        "@mui/material": "^6.4.8",
        "@mui/styles": "^6.4.8",
        "@types/chrome": "^0.1.1",
        "@types/dom-mediacapture-record": "^1.0.22",
        "@types/react": "^19.1.8",
        "@types/react-dom": "^19.1.6",
        "@types/semver": "^7.7.0",
        "@types/uuid": "^10.0.0",
        "clsx": "^2.1.1",
        "framer-motion": "^12.26.2",
        "i18next": "^25.3.2",
        "languagedetect": "^2.0.0",
        "lucide-react": "^0.562.0",
        "m3u8-parser": "^7.2.0",
        "mpd-parser": "^1.3.1",
        "react": "^19.1.0",
        "react-dom": "^19.1.0",
        "react-i18next": "^15.6.1",
        "regenerator-runtime": "^0.14.1",
        "semver": "^7.7.2",
        "tailwind-merge": "^3.4.0",
        "typescript": "^5.8.3",
        "uuid": "^11.1.0"
    },
    "devDependencies": {
        "@tailwindcss/postcss": "^4.1.18",
        "@types/jest": "^30.0.0",
        "@wxt-dev/module-react": "^1.1.3",
        "autoprefixer": "^10.4.23",
        "jest": "^30.0.5",
        "postcss": "^8.5.6",
        "tailwindcss": "^4.1.18",
        "ts-jest": "^29.4.0",
        "wxt": "^0.20.7",
        "yarn-upgrade-all": "^0.7.5"
    }
}
